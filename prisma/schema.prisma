generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model user {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  role     String @default("user")
  tasks    task[]
}

model task {
  id        Int    @id @default(autoincrement())
  title     String
  description String
  deadline  DateTime?
  completed Boolean @default(false)
  user      user   @relation(fields: [userId], references: [id])
  userId    Int
}